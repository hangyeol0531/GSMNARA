                    <input placeholder = "NewPassWord" type="password" class = "idtext" name = "newpassword"><br>
                    <input placeholder = "ReNewPassWord" type="password" class = "idtext" name ="newrePassWord">
                    <input placeholder = "OriginalPassWord" type="password" class = "oridtext" name ="originalPassWord">
